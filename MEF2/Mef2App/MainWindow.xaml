<Window
    x:Class="Mef2App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mef2App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Mef2App"
    Width="400"
    Height="200"
    FontSize="16"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel>
        <Button
            Padding="10"
            Command="{Binding LoadPluginCommand}"
            Content="Load Plugin" />
        <Button
            Padding="10"
            Command="{Binding InvokePluginCommand}"
            Content="Invoke Plugin (add 1)" />

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding IsLoadedPlugin, StringFormat='Loaded plugin = {0}'}" />

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Text="{Binding Value}" />
    </StackPanel>
</Window>
